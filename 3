#include "pch.h"
#include <iostream>
#include <Math.h>

using namespace std;

void main()
{
	setlocale(LC_ALL, "Russian");
	float sum;
	int menu, n, i, j;
	while (true) {
		cout << "Введите номер задания (1-3): ";
		cin >> menu;
		switch (menu)
		{
		case 1:
		{
			cout << "Введите n: ";
			cin >> n;
			sum = 1;
			for (i = 1; i <= n; i++) sum *= 2;
			cout << "Результат 1: " << sum << endl;
			sum = 1;
			for (i = 1; i <= n; i++) sum *= i;
			cout << "Результат 2: " << sum << endl;
			sum = 1;
			for (i = 1; i <= n; i++) sum *= 1.0 + 1.0 / (i*i);
			cout << "Результат 3: " << sum << endl;
			sum = sqrt(2);
			for (i = 2; i <= n; i++) sum += sqrt(2 + sum);
			cout << "Результат 4: " << sum << endl;
		} break;

		case 2:
		{
			cout << "Введите b: ";
			cin >> n;
			j = 0;
			sum = 0;
			for (i = 100; i <= n; i++)
			{
				sum += i * i;
				j++;
			}

			cout << "Среднее арифметическое квадратов всех чисел от 100 до b(" << n << "): " << sum / j << endl;
		} break;

		case 3:
		{
			cout << "Введите n: ";
			cin >> n;

			for (i = 1; i <= n; i++)
			{
				for (j = 1; j <= n; j++)
				{
					cout << i * j << "\t";
				}
				cout << endl << endl;
			}
		} break;
		}
	}
}
