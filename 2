#include "pch.h"
#include <iostream>
#include <Math.h>

using namespace std;

void main()
{
	setlocale(LC_ALL, "Russian");
	float a, b, c, min, max, x, x1, x2, d;
	int menu, n, n1, n2;
	while (true) {
		cout << "Введите номер задания (1-4): ";
		cin >> menu;
		switch (menu)
		{
		case 1:
		{
			cout << "Введите a, b, c" << endl;
			cin >> a >> b >> c;
			if (a >= b & a >= c) {
				max = a;
				if (b >= c) {
					min = c;
				}
				else min = b;
			}
			else if (c >= b & c >= a) {
				max = c;
				if (a >= b) {
					min = b;
				}
				else min = a;
			}
			else if (b >= a & b >= c) {
				max = b;
				if (a >= c) {
					min = c;
				}
				else min = a;
			}
			cout << "Максимальное значение: " << max << ", минимальное значение: " << min;

		} break;

		case 2:
		{
			cout << "Введите a, b, c" << endl;
			cin >> a >> b >> c;
			if (a > 5 || a < 2) {
				cout << "Число " << a << " не входит в диапазон" << endl;
			}
			else if (a == 5 || a == 2) {
				cout << "Число " << a << " лежит на границе диапазона" << endl;
			}
			else if (a > 2 & a < 5) {
				cout << "Число " << a << " лежит в диапазоне" << endl;
			}
			if (b > 5 || b < 2) {
				cout << "Число " << b << " не входит в диапазон" << endl;
			}
			else if (b == 5 || b == 2) {
				cout << "Число " << b << " лежит на границе диапазона" << endl;
			}
			else if (b > 2 & b < 5) {
				cout << "Число " << b << " лежит в диапазоне" << endl;
			}
			if (c > 5 || c < 2) {
				cout << "Число " << c << " не входит в диапазон" << endl;
			}
			else if (c == 5 || c == 2) {
				cout << "Число " << c << " лежит на границе диапазона" << endl;
			}
			else if (c > 2 & c < 5) {
				cout << "Число " << c << " лежит в диапазоне" << endl;
			}
		} break;

		case 3:
		{
			cout << "Введите возраст: ";
			cin >> n;
			if (n != 100) {
				n1 = n / 10;
				n2 = n % 10;
				if (n1 == 0) {
					if (n2 == 1) {
						cout << n2 << " год";
					}
					else if (n2 > 1 & n2 < 5) {
						cout << n2 << " года";
					}
					else cout << n2 << " лет";
				}
				else if (n1 >= 2) {
					if (n2 == 1) {
						cout << n1 << n2 << " год";
					}
					else if (n2 > 1 & n2 < 5) {
						cout << n1 << n2 << " года";
					}
					else cout << n1 << n2 << " лет";
				}
				else cout << n1 << n2 << " лет";
			}
			else cout << "100 лет";
		} break;

		case 4:
		{
			cout << "введите a, b, c: ";
			cin >> a >> b >> c;

			if (a == 0)
			{
				if (b == 0)
				{
					if (c == 0) cout << "Решений бесконечное множество";
					else cout << "Нет решения";
				}
				else
				{
					x = -c / b;
					cout << "х = " << x;
				}
			}
			else
			{
				d = b * b - 4 * a * c;
				if (d >= 0)
				{
					x1 = (-b + sqrt(d)) / (2 * a);
					x2 = (-b - sqrt(d)) / (2 * a);
					cout << "x1 = " << x1 << "\nx2 = " << x2;
				}
				else cout << "Корни комплексные";
			}

		} break;
		}
	}
}
