#include "pch.h"
#include <iostream>
#include <Math.h>

using namespace std;

void main()
{
	setlocale(LC_ALL, "Russian");
	float sum;
	int menu, n, i, j, min, max, minind, maxind;
	while (true) {
		cout << "Введите номер задания (1-4): ";
		cin >> menu;
		switch (menu)
		{
		case 1:
		{
			cout << "Введите n: ";
			cin >> n;
			int* a = new int[n];
			sum = 0;
			max = 1;
			min = 0;
			for (i = 0; i < n; i++)
			{
				cout << "a[" << i + 1 << "] = ";
				cin >> a[i];
				if (a[i] % 2 != 0)
				{
					sum += a[i];
					max *= a[i];
					min++;
				}
			}
			if (min != 0)
			{
				cout << "Количество нечётных элементов в массиве: " << min << endl;
				cout << "Сумма нечётных элементов в массиве: " << sum << endl;
				cout << "Произведение нечётных элементов в массиве: " << max << endl;
			}
			else cout << "Нечётные элементы в массиве отсутствуют" << endl;
		} break;

		case 2:
		{
			cout << "Введите n: ";
			cin >> n;

			int* a = new int[n];
			cout << "a[1] = ";
			cin >> a[0];
			max = min = a[0];
			minind = maxind = 0;
			for (i = 1; i < n; i++)
			{
				cout << "a[" << i + 1 << "] = ";
				cin >> a[i];
				if (a[i] > max)
				{
					max = a[i];
					maxind = i;
				}
				else if (a[i] < min)
				{
					min = a[i];
					minind = i;
				}
			}

			cout << endl;
			for (i = 0; i < n; i++)
			{
				if (maxind == i) a[i] = min;
				else if (minind == i) a[i] = max;
				cout << "a[" << i + 1 << "] = " << a[i] << endl;
			}

		} break;

		case 3:
		{
			cout << "Введите n: ";
			cin >> n;
			cout << "Введите b: ";
			cin >> max;

			int* a = new int[n];
			j = 0;
			for (i = 0; i < n; i++)
			{
				cout << "a[" << i + 1 << "] = ";
				cin >> a[i];
				if (a[i] >= max)
				{
					a[j] = a[i];
					j++;
				}
			}

			cout << endl;
			for (i = 0; i < j; i++) cout << "Изм. массив N[" << i + 1 << "] = " << a[i] << endl;
		} break;

		case 4:
		{
			cout << "Введите размерность массива: ";
			cin >> n;
			maxind = 0;
			int* a = new int[n];
			cout << "a[1] = ";
			cin >> a[0];
			max = a[0];
			for (i = 1; i < n; i++)
			{
				cout << "a[" << i + 1 << "] = ";
				cin >> a[i];
				if (a[i] > max)
				{
					max = a[i];
					maxind = i;
				}
			}

			cout << endl;

			for (i = 1; i < maxind; i += 2)
			{
				a[i] *= max;
			}

			for (i = 0; i < n; i++) cout << "a[" << i + 1 << "] = " << a[i] << endl;

		} break;
		}
	}
}
